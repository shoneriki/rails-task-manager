
<div class="container">
<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
  <li>
    <% if task.completed %>
      <i class="far fa-check-square"></i>
    <% end %>
<%= link_to task.title, task_path(task) %> <%= link_to task_path(task), method: :delete, data: { confirm: "Are you sure? You want to delete #{task.title}? "}  do %>  
  <i class="fas fa-trash"></i>
  <% end  %>
  </li>
  <p><%= task.details %> </p>
  <% end  %>
</ul>

<%= link_to "add new task",  new_task_path, class:"btn btn-primary"%>
</div>


